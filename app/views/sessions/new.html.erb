<div class="well">
  <div class="page-header">
    <h1>Log In</h1>
  </div>
  <%= form_tag sessions_path, :html => { :class => 'form-horizontal' } do %>
    <div class="control-group">
      <%= label_tag :email, nil, :class => 'control-label' %>
      <div class="controls">
        <%= email_field_tag :email, params[:email], :class => 'email_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :password, nil, :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, nil, :class => 'password_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Log In", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  root_path, :class => 'btn' %>
    </div>
  <% end %>

</div>