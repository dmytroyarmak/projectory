<div class="well">
  <div class="page-header">
    <h1>Sign Up</h1>
  </div>
  <%= form_for @user,:validate => true, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group <%= "error" unless @user.errors[:email].blank? %>">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :class => 'email_field' %>
        <% if @user.errors[:email] %>
          <% @user.errors[:email].each do |msg| %>
            <span class="help-inline"><%= msg %></span><br>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="control-group <%= "error" unless @user.errors[:password].blank? %>">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'password_field' %>
        <% if @user.errors[:password] %>
          <% @user.errors[:password].each do |msg| %>
            <span class="help-inline"><%= msg %></span><br>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="control-group <%= "error" unless @user.errors[:password_confirmation].blank? %>">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'password_field' %>
        <% if @user.errors[:password_confirmation] %>
          <% @user.errors[:password_confirmation].each do |msg| %>
            <span class="help-inline"><%= msg %></span><br>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  root_path, :class => 'btn' %>
    </div>
  <% end %>

</div>